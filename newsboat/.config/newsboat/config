# general settings
auto-reload yes

# external browser
#browser "firefox developer edition"
browser "mpv"
#macro m set browser "mpv"; open-in-browser ; set browser "firefox developer edition"

# unbind keys

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
unbind-key g
unbind-key G
bind-key s sort
bind-key S rev-sort
bind-key g home
bind-key G end

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
