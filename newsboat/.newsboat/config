# general settings
auto-reload yes

# external browser
browser "qutebrowser"
macro m set browser "mpv"; open-in-browser ; set browser "qutebrowser"

# unbind keys

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

